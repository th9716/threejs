@model IEnumerable<dbCompanyTest.Models.OrderDetail>

@{
    ViewData["Title"] = "Details";
}
@{
    Layout = "_Back_Layout_Sneat";
}
<div>
<h1>Details</h1>


    <h4>Order</h4>
    <hr />

    <table class="table">
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.訂單編號)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.商品價格)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.商品數量)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.總金額)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                        @Html.DisplayFor(modelItem => item.訂單編號)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.商品價格)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.商品數量)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.總金額)
                </td>
              
                <td>
                    <a asp-action="EditOrderDetail" asp-route-id="@item.無用id">Edit</a> |
                    <a asp-action="DeleteOrderDetail" asp-route-id="@item.無用id">Delete</a>
                </td>
            </tr>
            }
    </tbody>
</table>
</div>
